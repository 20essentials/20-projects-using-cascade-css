---
interface Props {
  id: string;
  title: string;
  web: string;
  repo: string;
  localImage?: string | null;
}
const { id, localImage, repo, title, web } = Astro.props;
---

<div class='switch-card'>
  <div class='joy-con left'>
    <div class='minus button'></div>
    <a class='joystick joystick-github' href={repo}>
      <img src='./assets/github.svg' alt='github log' class='github-logo' />
      <div class='joystick-inner-border'>
        <div class='joystick-inner'></div>
      </div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
    </a>
    <div class='numpad-container'>
      <div class='numpad-part numpad-top'>
        <div class='numpad-button'>▲</div>
      </div>
      <div class='numpad-part numpad-middle'>
        <div class='numpad-button'>◀</div>
        <div class='numpad-button'>▶</div>
      </div>
      <div class='numpad-part numpad-bottom'>
        <div class='numpad-button'>▼</div>
      </div>
    </div>
    <div class='record-button'>
      <div class='record-button-inner'></div>
    </div>
  </div>
  <div class='screen-outline'>
    <div class='screen-border'>
      <a class='screen' href={web}>
        <img src={localImage} alt={title} />
      </a>
    </div>
  </div>

  <div class='joy-con right'>
    <div class='plus-symbol'>
      <div class='plus-symbol-overlap-fixer'></div>
    </div>

    <div class='joystick'>
      <div class='joystick-inner-border'>
        <div class='joystick-inner'></div>
      </div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
      <div class='joystick-edge'></div>
    </div>

    <div class='numpad-container'>
      <div class='numpad-part numpad-top'>
        <div class='numpad-button'>X</div>
      </div>
      <div class='numpad-part numpad-middle'>
        <div class='numpad-button button'>Y</div>
        <div class='numpad-button button'>A</div>
      </div>
      <div class='numpad-part numpad-bottom'>
        <div class='numpad-button button'>B</div>
      </div>
    </div>

    <div class='home-button-border'>
      <div class='home-button'>⌂</div>
    </div>
  </div>
</div>

<style>
  .switch-card {
    display: flex;
    align-items: stretch;
    width: 28vmax;
    height: 12.8vmax;
  }

  .screen-outline {
    display: flex;
    align-items: stretch;
    border-radius: 0.1vmax;
    padding: 0.65vmax 0.91vmax;
    justify-content: center;
    background: rgb(71, 77, 79);
    background: linear-gradient(
      180deg,
      rgba(71, 77, 79, 1) 0%,
      rgba(90, 97, 100, 1) 3%,
      rgba(46, 50, 51, 1) 5%,
      rgba(46, 50, 51, 1) 100%
    );
  }

  .screen-border {
    border-top: 1.11vmax solid black;
    border-bottom: 1.11vmax solid black;
    border-left: 1.63vmax solid black;
    border-right: 1.63vmax solid black;
    border-radius: 0.39vmax;
    width: 17.14vmax;
    flex: 1;
    background-color: black;
    display: flex;
  }

  .screen {
    border-radius: 0.1vmax;
    border: 0.01vmax solid #fff1;
    background: rgb(38, 39, 43);
    background: linear-gradient(
      135deg,
      rgba(38, 39, 43, 1) 0%,
      rgba(49, 52, 62, 1) 49%,
      rgba(38, 39, 43, 1) 100%
    );
    flex: 1;
    overflow: hidden;
    cursor: pointer;
  }

  .screen img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .joy-con {
    background-color: pink;
    width: 4.23vmax;
    height: 12.8vmax;
    position: relative;
  }

  .joy-con.left {
    background: rgb(0, 186, 219);
    background: linear-gradient(
      148deg,
      rgba(0, 186, 219, 1) 0%,
      rgba(0, 185, 220, 1) 100%
    );
    box-shadow:
      inset 0.2vmax -0.26vmax 0.65vmax #058ca5,
      inset 0 0.33vmax 0.2vmax #6ad9ed;
    border-top-right-radius: 0.26vmax;
    border-top-left-radius: 2.6vmax;
    border-bottom-left-radius: 2.6vmax;
    border-bottom-right-radius: 0.26vmax;
  }

  .joy-con.right {
    border-top-right-radius: 2.6vmax;
    border-bottom-right-radius: 2.6vmax;
    border-top-left-radius: 0.26vmax;
    border-bottom-left-radius: 0.26vmax;
    box-shadow:
      inset -0.2vmax -0.26vmax 0.65vmax #d12621,
      inset 0 0.33vmax 0.2vmax #fd877c;
    background: rgb(250, 97, 93);
    background: linear-gradient(
      148deg,
      rgba(250, 97, 93, 1) 0%,
      rgba(239, 79, 77, 1) 100%
    );
  }

  .joy-con.left .minus {
    position: absolute;
    top: 1.17vmax;
    width: 0.65vmax;
    height: 0.13vmax;
    border: 0.05vmax solid #222;
    right: 0.33vmax;
    border-radius: 0.07vmax;
    background-color: #3c3d41;
  }

  .joy-con.left .joystick {
    left: 50%;
    transform: translate(-50%);
    top: 2.28vmax;
  }

  .joy-con.right .joystick {
    top: 5.69vmax;
    left: 0.91vmax;
    filter: contrast(130%) drop-shadow(0 0.07vmax 0.13vmax #00000088);
  }

  .joystick {
    background-color: #2d2e33;
    border-radius: 100%;
    height: 1.83vmax;
    width: 1.83vmax;
    border: 0.06vmax solid #2d2e33;
    grid-column-gap: 0.06vmax;
    grid-row-gap: 0.06vmax;
    filter: drop-shadow(0 0.07vmax 0.13vmax #00000088);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);

    &.joystick-github {
      .github-logo {
        position: absolute;
        width: 0.9vmax;
        height: 0.9vmax;
        z-index: 100;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    }
  }
  .joystick-edge {
    background-color: #444;
  }

  .joystick-inner-border {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #2d2e33;
    z-index: 2;
    border-radius: 100%;
    transform: translate(-50%, -50%);
    padding: 0.06vmax;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .joystick-inner {
    border-radius: 50%;
    background-color: #282c2f;
    width: 1.43vmax;
    height: 1.43vmax;
    box-shadow:
      inset 0 -0.26vmax 0.26vmax rgb(49, 49, 49),
      inset 0 0.26vmax 0.79vmax rgb(124, 124, 124),
      inset 0 0.26vmax 0.39vmax rgb(0, 0, 0);
    z-index: 3;
    position: relative;
  }

  .numpad-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 2.86vmax;
    height: 2.86vmax;
  }
  .joy-con.left .numpad-container {
    top: 5.35vmax;
    left: 0.78vmax;
    font-size: 0.52vmax;
    color: #1b1b1c;
  }
  .joy-con.right .numpad-container {
    top: 1.86vmax;
    left: 0.52vmax;
    font-size: 0.46vmax;
    color: #d7d7d7;
  }

  .numpad-middle {
    display: flex;
    align-items: center;
    gap: 1.04vmax;
  }

  .plus-symbol {
    width: 0.65vmax;
    height: 0.65vmax;
    top: 0.95vmax;
    left: 0.33vmax;
    position: absolute;
    display: inline-block;
    cursor: pointer;
  }

  .plus-symbol-overlap-fixer {
    position: absolute;
    background-color: #333;
    width: 0.13vmax;
    height: calc(100% - 0.13vmax);
    border-radius: 0.07vmax;
    top: 50%;
    left: 50%;
    z-index: 3;
    transform: translate(-50%, -50%);
  }
  .plus-symbol::before,
  .plus-symbol::after {
    content: '';
    position: absolute;
    background-color: #333;
    border: 0.05vmax solid #222;
    border-radius: 0.07vmax;
  }

  .plus-symbol::before {
    width: 0.13vmax;
    height: 86.5%;
    left: 50%;
    transform: translateX(-50%);
  }

  .plus-symbol::after {
    width: 86.5%;
    height: 0.13vmax;
    top: 50%;
    transform: translateY(-50%);
  }

  .numpad-button {
    background-color: #505050;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    width: 0.78vmax;
    height: 0.78vmax;
    border: 0.06vmax solid #2d2e33;
    box-shadow:
      inset -0.03vmax -0.03vmax 0.1vmax rgba(92, 92, 92, 0.5),
      inset 0.01vmax 0.07vmax 0.05vmax rgba(143, 143, 143, 0.658),
      inset -0.07vmax -0.07vmax 0.13vmax rgba(31, 31, 31, 0.76),
      0 0 0.2vmax #00000055;
  }

  .numpad-part {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .record-button {
    width: 0.65vmax;
    height: 0.65vmax;
    border: 0.06vmax solid #2d2e33;
    border-radius: 0.07vmax;
    top: 8.74vmax;
    left: 2.55vmax;
    cursor: pointer;
    position: absolute;
    background: rgb(96, 95, 101);
    background: linear-gradient(135deg, #605f65 0%, rgba(60, 61, 66, 1) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .record-button-inner {
    width: 0.26vmax;
    height: 0.26vmax;
    border: 0.06vmax solid #2d2e33;
    background: rgb(96, 95, 101);
    background: linear-gradient(135deg, #605f65 0%, rgba(60, 61, 66, 1) 100%);
    border-radius: 50%;
  }

  .home-button-border {
    position: absolute;
    cursor: pointer;
    top: 8.63vmax;
    left: 0.78vmax;
    border: 0.06vmax solid #1b1b1c;
    height: 0.91vmax;
    width: 0.91vmax;
    padding: 0.06vmax;
    background: linear-gradient(135deg, #a0a0a0 0%, #303030 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .home-button {
    width: 0.78vmax;
    height: 0.78vmax;
    border: 0.06vmax solid #1b1b1c;
    font-size: 0.59vmax;
    background: linear-gradient(180deg, #6b6b6b 0%, #303030 100%);
    border-radius: 50%;
    display: flex;
    color: black;
    align-items: center;
    justify-content: center;
  }

  .button {
    cursor: pointer;
  }

  .heart-card {
    position: relative;
    width: 13.04vmax;
    height: 13.04vmax;
    margin-top: 3.26vmax;
    background-color: #ff6b6b;
    transform: rotate(-45deg);
    z-index: 2;
  }

  .heart-card::before,
  .heart-card::after {
    content: '';
    position: absolute;
    width: 13.04vmax;
    height: 13.04vmax;
    background-color: #ff6b6b;
    border-radius: 50%;
    z-index: -1;
  }

  .heart-card::before {
    top: -6.53vmax;
    left: 0;
  }

  .heart-card::after {
    left: -6.53vmax;
    top: 0;
  }

  .content {
    position: absolute;
    top: 3.26vmax;
    left: 3.26vmax;
    width: 6.53vmax;
    height: 6.53vmax;
    transform: rotate(40deg);
    text-align: center;
    color: white;
  }

  .content h2 {
    font-size: 1.17vmax;
    margin-bottom: 0.65vmax;
  }

  .content p {
    font-size: 1vmax;
  }
</style>
